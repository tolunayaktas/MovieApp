@model Movie





<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="/img/@Model.ImageUrl" class="card-img" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <div>
                    <a class="btn btn-dark" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" >details</a>

                    
                    
                </div>
            </div>
        </div>
    </div>
</div>



